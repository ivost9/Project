@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}
<link rel="stylesheet" href="~/css/Login.css" />
@*<h1><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрация</a></h1>*@
<div class="formi">
    <a asp-area="Identity" asp-page="/Account/Register"><button class="btn2">Регистрация</button></a>
    <a asp-area="Identity" asp-page="/Account/Login"><button class="btn2">Вход</button></a>
</div>
<hr />
<div class="row">
    <div class="col-md-4 table-secondary">
        <section>
            <form id="account" method="post">
                <h4>Влизане.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="form-control" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary text-white">Вход</button>
                </div>

            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
