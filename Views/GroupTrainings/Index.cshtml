@model IEnumerable<FitnessClub3.Models.GroupTraining>

@{
    ViewData["Title"] = "Групови Тренировки";
}

<h1>Групови Тренировки</h1>
@if (User.IsInRole(FitnessClub3.Utility.Helper.GroupTrainer))
{
    <p>
        <a asp-action="Create">Създай</a>
    </p>
}

<table class="table table-hover table-secondary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.TrainerId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.TrainerName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.TrainerId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.TrainerName)
                </td>



                @if (User.IsInRole(FitnessClub3.Utility.Helper.SportsMan))
                {
                    <td>
                        <a asp-action="Attend" asp-route-id="@item.GroupTrainingId">Запази място</a>
                    </td>
                }

                @if (User.IsInRole(FitnessClub3.Utility.Helper.Admin))
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.GroupTrainingId">Детайли</a> |
                        <a asp-action="Delete" asp-route-id="@item.GroupTrainingId">Премахни</a>
                    </td>
                }
                @if (User.IsInRole(FitnessClub3.Utility.Helper.GroupTrainer))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.GroupTrainingId">Редактирай</a> |
                        <a asp-action="Details" asp-route-id="@item.GroupTrainingId">Детайли</a> |
                        <a asp-action="Delete" asp-route-id="@item.GroupTrainingId">Премахни</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
