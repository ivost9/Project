@model FitnessClub3.Models.GroupTraining

@{
    ViewData["Title"] = "Създай";
}

<h1>Създай</h1>

<h4>Групови Тренировки</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Duration"></label>
                <div>
                    <select id="duration" asp-for="Duration" asp-items="ViewBag.Duration" class="form-control"></select>
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
            </div>
            @if (User.IsInRole(FitnessClub3.Utility.Helper.Admin))
            {
                <div class="form-group">
                    <label asp-for="TrainerId" class="control-label"></label>
                    <input asp-for="TrainerId" class="form-control" />
                    <span asp-validation-for="TrainerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TrainerName" class="control-label"></label>
                    <input asp-for="TrainerName" class="form-control" />
                    <span asp-validation-for="TrainerName" class="text-danger"></span>
                </div>
            }


            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад към листа</a>
</div>

