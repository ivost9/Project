@model IEnumerable<FitnessClub3.Models.GroupTrainingUser>

@{
    ViewData["Title"] = "Списък";
}

<h1>Списък</h1>

@*<p>
    <a asp-action="Create">Добави спортист към тренировка</a>
</p>*@
<table class="table table-hover table-secondary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportsManName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupTraining)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SportsManName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupTraining.GroupTrainingId)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.GroupTrainingUserId">Премахни</a>
            </td>
        </tr>
}
    </tbody>
</table>
